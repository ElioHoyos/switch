<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SwitchClase.view.SegundaPaginaView">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,*">

                    <!--Grid.ColumnSpan="2"= Sirve para poner en el centro a la imagen-->
                    <Image  Grid.ColumnSpan="2" Source="https://images.vexels.com/media/users/3/142890/isolated/preview/4ea2d7c4bf3cad23a4f18ee58752deb8-logotipo-de-anillos-de-alta-tecnologia.png" 
                       TranslationY="6" VerticalOptions="Start" Aspect="AspectFit" HeightRequest="280"/>
                    <!-- Frame to achieve the gradient over the image-->
                    <Frame Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" TranslationY="62" HasShadow="False">
                        <Frame.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Color="Transparent" Offset="0.6" />
                                <GradientStop Color="#e4e4e4" Offset="0.9" />
                            </LinearGradientBrush>
                        </Frame.Background>
                    </Frame>
                    <Label x:Name="LabelNombre" FontSize="20" HorizontalOptions="Center" Margin="24" Grid.Row="1" TextColor="Black"/>
                    <Label x:Name="lblMensaje" FontSize="20" HorizontalOptions="Center" Margin="4" Grid.Row="1" TextColor="Black" TranslationY="50" TranslationX="10"/>
                    
                    <!-- 3. Cards -->
                    <Frame Grid.Row="3"  BackgroundColor="#3bc4e5" Grid.Column="0" Margin="25"  CornerRadius="20" TranslationY="-30">
                        <Label TextColor="White" VerticalTextAlignment="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="80K+&#10;" FontAttributes="Bold" FontSize="33"/>
                                    <Span Text="Libros de todos los gustos" FontSize="20"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                    </Frame>
                    

                    <Frame Grid.Row="3" Grid.Column="1" Margin="25"  BackgroundColor="#fe6954" CornerRadius="20" TranslationY="-30">
                        <Label TextColor="White" VerticalTextAlignment="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="12&#10;" FontAttributes="Bold" FontSize="33"/>
                                    <Span Text="Acogedoras salas de lectura" FontSize="19" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </Frame>
                    

                    <!--Esto es la segunda fila de los card-->
                    <Frame Grid.Row="4"  BackgroundColor="#3bc4e5" Grid.Column="0" Margin="25"  CornerRadius="20" TranslationY="-35">
                        <Label TextColor="White" VerticalTextAlignment="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="80K+&#10;" FontAttributes="Bold" FontSize="33"/>
                                    <Span Text="Libros de todos los gustos" FontSize="20"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </Frame>
                    
                    <!--Grid.Row="4"= Indica en que esta en pocicion vertical ocupando el 4 lugar-->
                    <Frame Grid.Row="4" Grid.Column="1" Margin="25"  BackgroundColor="#fe6954" CornerRadius="20" TranslationY="-35">
                        <Label TextColor="White" VerticalTextAlignment="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="12&#10;" FontAttributes="Bold" FontSize="33"/>
                                    <Span Text="Acogedoras salas de lectura" FontSize="19" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </Frame>
                    


                </Grid>
            </ScrollView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>