<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SwitchClase.view.PrimeraPaginaView"
             Title="SENATI">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="Azure"
            BorderColor="Black"
            Margin="20"
            CornerRadius="20"            
            >
                <StackLayout>
                    <Label Text="Primera Pagina" TextColor="Black"></Label>
                    <Entry Placeholder="Nombre" TextColor="Blue" x:Name="txtNombre"></Entry>
                    <Entry Placeholder="Apellido" TextColor="Blue" x:Name="txtApellido"></Entry>
                    <Entry Placeholder="DNI" TextColor="Blue" x:Name="txtDNI"></Entry>
                    <Entry Placeholder="Dirección" TextColor="Blue" x:Name="txtDir"></Entry>
                    <Entry Placeholder="Celular" TextColor="Blue" x:Name="txtCel"></Entry>
                    <Switch IsToggled="False" x:Name="RememberSwitch" Toggled="RememberMe_toggle_Switch"></Switch>
                    <Button Text="Registrar" Clicked="Button_Clicked"></Button>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>